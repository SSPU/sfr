<h1>Listing products</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>SN</th>
      <th>Category</th>
      <th>Active</th>
      <th>Name</th>
      <th>Des</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id     %></td>
        <td><%= product.sn     %></td>
        <td><%= Product::CAT_OPTS[product.cat][0] %></td>
        <td><%= product.active %></td>
        <td><%= product.name   %></td>
        <td><%= product.des    %></td>
        <td><%= link_to 'Show', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_admin_product_path %>
