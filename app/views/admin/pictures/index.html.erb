<h1>Listing Pictures</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Order</th>
      <th>Cover</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.id     %></td>
        <td><%= picture.order  %></td>
        <td><%= picture.cover  %></td>
        <td><%= image_tag picture.file.url(:small) %></td>
        <td><%= link_to 'Show', admin_product_picture_path(@product, picture) %></td>
        <td><%= link_to 'Edit', edit_admin_product_picture_path(@product, picture) %></td>
        <td><%= link_to 'Destroy', admin_product_picture_path(@product, picture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_admin_product_picture_path(@product) %>
